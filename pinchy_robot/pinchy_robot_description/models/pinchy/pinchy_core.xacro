<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <material name="silver">
    <color rgba="0.75 0.75 0.75 1"/>
  </material>

  <link name='root'/>
  <link name='massive_block'>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.0001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <pose>0 0 0 0 0 0</pose>
      <geometry>
        <box size="0.1 0.1 0.0001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1000.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0" iyy="0" izz="0"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="root_to_massive_block" type="fixed">
    <parent link="root"/>
    <child link="massive_block"/>
  </joint>
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="silver"/>
      <origin xyz="0 0 0.025"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.025"/>
      <inertia ixx="0.0027" iyy="0.0027" izz="0.005"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="massive_block_to_base_link" type="fixed">
    <parent link="massive_block"/>
    <child link="base_link"/>
  </joint>
  <link name="torso">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
      <material name="silver"/>
      <origin xyz="0 0 0.25"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0.25"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.25"/>
      <inertia ixx="0.002146" iyy="0.002146" izz="0.00125"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="base_link_to_torso" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="torso"/>
    <origin rpy="0 0 0" xyz="0 0 0.05"/>
  </joint>
  <link name="upper_arm">
    <visual>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
      <material name="silver"/>
      <origin xyz="0 0 0.2"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0.2"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.2"/>
      <inertia ixx="0.01396" iyy="0.01396" izz="0.00125"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="torso_to_upper_arm" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="torso"/>
    <child link="upper_arm"/>
    <origin rpy="0 1.5708 0" xyz="0 -0.1 0.45"/>
  </joint>
  <link name="lower_arm">
    <visual>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
      <material name="silver"/>
      <origin xyz="0 0 0.2"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0.2"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.2"/>
      <inertia ixx="0.01396" iyy="0.01396" izz="0.00125"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="upper_arm_to_lower_arm" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="upper_arm"/>
    <child link="lower_arm"/>
    <origin rpy="0 0 0" xyz="0 0.1 0.35"/>
  </joint>
  <link name="hand">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.00042" iyy="0.00042" izz="0.00042"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="lower_arm_to_hand" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="lower_arm"/>
    <child link="hand"/>
    <origin rpy="0 0 0" xyz="0 0 0.425"/>
  </joint>
</robot>
